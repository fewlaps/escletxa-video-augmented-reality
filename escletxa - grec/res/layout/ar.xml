        android:layout_width="@dimen/video"
        android:layout_height="@dimen/video" >
    </VideoView>
    <View
        android:visibility="gone"
        android:background="@android:color/black"
        android:id="@+id/surface_1_top"
        android:layout_width="@dimen/video"
        android:layout_height="@dimen/video" >
    </View>

    <VideoView
        android:id="@+id/surface_2"
